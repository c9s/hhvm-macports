# $Id$

PortSystem      1.0

name            jemalloc
categories      devel
version         3.6.0
revision        0
license         BSD
maintainers     openmaintainer

description     a general-purpose scalable concurrent malloc(3) implementation
long_description \
    jemalloc is a general-purpose scalable concurrent malloc(3) implementation.

homepage        http://www.canonware.com/jemalloc/
master_sites    http://www.canonware.com/download/jemalloc/

use_bzip2       yes

checksums \
    rmd160  4c65b40af64cfafc02cdc5c01439a277bc32ccc7 \
    sha256  e16c2159dd3c81ca2dc3b5c9ef0d43e1f2f45b04548f42db12e7c12d7bdf84fe

depends_build   port:libxslt

post-extract {
    # move [glob ${workpath}/*] ${worksrcpath}
    mv ${worksrcpath}/bin/pprof ${worksrcpath}/bin/jemalloc-prof
}

post-destroot {
    xinstall    ${worksrcpath}/lib/libjemalloc.1.dylib ${destroot}${prefix}/lib
    xinstall    ${worksrcpath}/lib/libjemalloc.dylib ${destroot}${prefix}/lib
    xinstall    ${worksrcpath}/lib/libjemalloc.a ${destroot}${prefix}/lib
    xinstall -d -m 755 ${worksrcpath}/include           ${destroot}${prefix}/include
}

test.run        yes
test.target     check

livecheck.type  regex
livecheck.url   http://www.canonware.com/jemalloc/download.html
livecheck.regex {/jemalloc-([0-9]+\.[0-9.]+)\.tar\.}
